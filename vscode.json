{
    // security and privacy
    "workbench.enableExperiments": false,
    "security.workspace.trust.enabled": false,
    "update.mode": "none",
    "telemetry.telemetryLevel": "off",
    // style and layout
    "workbench.colorTheme": "Chinolor", // install
    "workbench.iconTheme": "material-icon-theme", // install
    "window.commandCenter": false,
    "workbench.layoutControl.enabled": false,
    "workbench.tips.enabled": false,
    "workbench.startupEditor": "none",
    "workbench.editor.empty.hint": "hidden",
    // file control
    "files.autoGuessEncoding": true,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "git.ignoreMissingGitWarning": true,
    "git.openRepositoryInParentFolders": "never",
    "files.associations": {
        "*.json": "jsonc"
    },
    "workbench.editorAssociations": {
        "*.pdf": "latex-workshop-pdf-hook"
    },
    // font and format
    "editor.fontFamily": "Menlo", // install
    "editor.fontSize": 14,
    "editor.lineNumbers": "relative",
    "editor.cursorBlinking": "solid",
    "editor.guides.bracketPairs": "active",
    "editor.tabSize": 4,
    "editor.indentSize": "tabSize",
    "editor.detectIndentation": false,
    "editor.wordWrap": "on",
    "editor.minimap.renderCharacters": false,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.accessibilitySupport": "off",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.inheritEnv": false,
    "terminal.integrated.enableMultiLinePasteWarning": "never",
    // extension
    "extensions.autoUpdate": false,
    "extensions.ignoreRecommendations": true,
    // extension: vim
    "vim.useSystemClipboard": true,
    "vim.handleKeys": {
        "<C-w>": false,
        "<C-b>": false,
        "<C-k>": false,
        "<C-x>": false
    },
    // extension: rewrap
    "rewrap.autoWrap.enabled": false,
    // extension: c/c++
    "C_Cpp.clang_format_fallbackStyle": "{BasedOnStyle: WebKit, ColumnLimit: 100, AlignConsecutiveMacros: true, AlignTrailingComments: true}",
    "C_Cpp.default.includePath": [ // * os
        // system include
        "/Library/Developer/CommandLineTools/usr/include/**",
        "/Library/Developer/CommandLineTools/usr/lib/clang/14.0.3/include/**",
        "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/usr/include/**",
        // user include
        "/opt/homebrew/include/**"
    ],
    // extension: python
    "python.terminal.activateEnvironment": false,
    "python.defaultInterpreterPath": "/opt/homebrew/bin/python3", // * os
    "[python]": {
        "editor.guides.bracketPairs": false,
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    // extension: go
    "go.toolsManagement.checkForUpdates": "off",
    // extension: java
    "redhat.telemetry.enabled": false,
    "java.compile.nullAnalysis.mode": "automatic",
    "java.configuration.updateBuildConfiguration": "automatic",
    "[xml]": {
        "editor.tabSize": 2,
        "files.trimFinalNewlines": true
    },
    // extension: web
    "html.completion.attributeDefaultValue": "doublequotes",
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features",
        "editor.tabSize": 2
    },
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features",
        "editor.tabSize": 2,
        // eslint airbnb max length
        "editor.rulers": [
            100
        ]
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    // extension: markdown
    "markdown-preview-github-styles.colorTheme": "system",
    // extension: latex
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.latex.autoClean.run": "onBuilt",
    "latex-workshop.formatting.latex": "latexindent",
    "latex-workshop.formatting.latexindent.path": "/opt/homebrew/bin/latexindent", // * os
    "latex-workshop.latex.recipe.default": "lastUsed",
    "[tex]": {
        "editor.tabSize": 2
    },
    "[latex]": {
        "editor.tabSize": 2
    },
    "[bibtex]": {
        "editor.tabSize": 2
    },
    // latex compiler and recipe
    "latex-workshop.latex.tools": [
        {
            "name": "pdfLaTeX",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-shell-escape",
                "%DOCFILE%"
            ]
        },
        {
            "name": "BibTeX",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ]
        },
        {
            "name": "Biber",
            "command": "biber",
            "args": [
                "%DOCFILE%"
            ]
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "pdfLaTeX->pdfLaTeX",
            "tools": [
                "pdfLaTeX",
                "pdfLaTeX"
            ]
        },
        {
            "name": "pdfLaTeX->BibTeX->pdfLaTeX->pdfLaTeX",
            "tools": [
                "pdfLaTeX",
                "BibTeX",
                "pdfLaTeX",
                "pdfLaTeX"
            ]
        },
        {
            "name": "pdfLaTeX->Biber->pdfLaTeX->pdfLaTeX",
            "tools": [
                "pdfLaTeX",
                "Biber",
                "pdfLaTeX",
                "pdfLaTeX"
            ]
        }
    ],
    // latex cleanup
    "latex-workshop.latex.clean.method": "glob",
    "latex-workshop.latex.clean.fileTypes": [
        "*.acn",
        "*.acr",
        "*.alg",
        "*.aux",
        "*.bbl",
        "*.bcf",
        "*.blg",
        "*.fdb_latexmk",
        "*.fls",
        "*.glg",
        "*.glo",
        "*.gls",
        "*.idx",
        "*.ind",
        "*.ist",
        "*.lof",
        "*.log",
        "*.lot",
        "*.out",
        "*.synctex.gz",
        "*.toc",
        "*.xml"
    ],
    // extension: spell check
    "cSpell.words": [
        "junyong",
        "zhao"
    ],
    "cSpell.enabledLanguageIds": [
        "latex",
        "markdown",
        "plaintext"
    ]
}