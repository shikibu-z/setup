/*
 * @Description : This is my configuration file for Visual Studio Code.
 * @Author      : Junyong Zhao (junyong@arizona.edu)
 * @LastEditTime: 2023-01-14 12:39:57
 */
{
    // 隐私，更新，测试功能设置
    "update.mode": "manual",
    "telemetry.telemetryLevel": "off",
    // 文件，面板，主题，图标设置
    "explorer.confirmDelete": false,
    "files.autoGuessEncoding": true,
    "git.ignoreMissingGitWarning": true,
    "workbench.startupEditor": "none",
    "workbench.tips.enabled": false,
    "workbench.editor.untitled.hint": "hidden",
    "workbench.layoutControl.enabled": false,
    // "workbench.colorTheme": "Chinolor", // install
    "workbench.list.mouseWheelScrollSensitivity": 0.5,
    "workbench.list.fastScrollSensitivity": 2.5,
    "workbench.enableExperiments": false,
    //编辑器，终端设置
    "editor.fontSize": 14,
    "editor.fontLigatures": true,
    "editor.fontFamily": "JetBrains Mono, SF Pro", // install
    "editor.letterSpacing": 0.2,
    "editor.lineHeight": 1.7,
    "editor.lineNumbers": "relative",
    "editor.cursorBlinking": "solid",
    "editor.guides.bracketPairs": "active",
    "editor.rulers": [
        80
    ],
    "editor.mouseWheelScrollSensitivity": 0.5,
    "editor.fastScrollSensitivity": 2.5,
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.letterSpacing": 1,
    "terminal.integrated.lineHeight": 1.15,
    "terminal.integrated.inheritEnv": false,
    "terminal.integrated.mouseWheelScrollSensitivity": 0.5,
    "terminal.integrated.fastScrollSensitivity": 2.5,
    // 扩展设置
    "extensions.autoUpdate": false,
    "extensions.ignoreRecommendations": true,
    // vim
    "vim.useSystemClipboard": true,
    "vim.handleKeys": {
        "<C-w>": false,
        "<C-b>": false,
        "<C-k>": false,
        "<C-x>": false
    },
    // 文件标头
    "fileheader.configObj": {
        "autoAdd": false,
        "wideSame": true,
        "wideNum": 12,
        "cursorModeInternalAll": {
            "python": true,
            "defaultSetting": false
        },
        "functionBlankSpaceAll": {
            "python": 4,
            "defaultSetting": 0
        }
    },
    "fileheader.customMade": {
        "Description": "",
        "Author": "Junyong Zhao (junyong@arizona.edu)",
        "LastEditTime": "Do not edit"
    },
    // 自动折行
    "rewrap.autoWrap.enabled": true,
    // C / C++
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: WebKit, ColumnLimit: 80 }",
    "C_Cpp.default.includePath": [ // * OS
        // system C
        "/Library/Developer/CommandLineTools/usr/include/**",
        "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/usr/include/**",
        "/Library/Developer/CommandLineTools/usr/lib/clang/13.0.0/include/**",
        // system C++
        "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/usr/include/c++/v1/**",
        // Homebrew
        "/opt/homebrew/include/**",
        // home usr
        "/Users/shikibu/usr/include/**"
    ],
    // python
    "python.terminal.activateEnvironment": false,
    "python.defaultInterpreterPath": "/opt/homebrew/bin/python3", // OS
    "python.linting.pylintPath": "/opt/homebrew/bin/pylint", // OS
    "python.formatting.autopep8Path": "/opt/homebrew/bin/autopep8", // OS
    "[python]": {
        "editor.guides.bracketPairs": false
    },
    // Web
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features",
        "editor.tabSize": 2
    },
    "html.completion.attributeDefaultValue": "doublequotes",
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features",
        "editor.tabSize": 2,
        // eslint airbnb max length
        "editor.rulers": [
            100
        ]
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features",
        "editor.rulers": []
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features",
        "editor.rulers": []
    },
    // Markdown渲染样式
    "markdown-preview-github-styles.colorTheme": "system",
    // LaTeX环境
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.latex.autoClean.run": "onBuilt",
    "latex-workshop.latexindent.path": "/opt/homebrew/bin/latexindent", // OS
    "latex-workshop.latex.recipe.default": "lastUsed",
    "latex-workshop.latex.tools": [
        {
            "name": "XeLaTeX",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOCFILE%"
            ]
        },
        {
            "name": "pdfLaTeX",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-shell-escape",
                "%DOCFILE%"
            ]
        },
        {
            "name": "BibTeX",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ]
        },
        {
            "name": "Biber",
            "command": "biber",
            "args": [
                "%DOCFILE%"
            ]
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "pdfLaTeX",
            "tools": [
                "pdfLaTeX"
            ]
        },
        {
            "name": "pdfLaTeX->BibTeX->pdfLaTeX->pdfLaTeX",
            "tools": [
                "pdfLaTeX",
                "BibTeX",
                "pdfLaTeX",
                "pdfLaTeX"
            ]
        },
        {
            "name": "pdfLaTeX->Biber->pdfLaTeX->pdfLaTeX",
            "tools": [
                "pdfLaTeX",
                "Biber",
                "pdfLaTeX",
                "pdfLaTeX"
            ]
        }
    ],
    "latex-workshop.latex.clean.fileTypes": [
        "*.aux",
        "*.bbl",
        "*.blg",
        "*.idx",
        "*.ind",
        "*.lof",
        "*.lot",
        "*.out",
        "*.toc",
        "*.acn",
        "*.acr",
        "*.alg",
        "*.glg",
        "*.glo",
        "*.gls",
        "*.ist",
        "*.fls",
        "*.log",
        "*.synctex.gz",
        "*.fdb_latexmk",
        "*.bcf",
        "*.xml"
    ],
    // 拼写检查
    "cSpell.enabledLanguageIds": [
        "latex",
        "markdown",
        "plaintext"
    ]
}