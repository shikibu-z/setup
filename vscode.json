/*
 * @Description : This is my configuration file for Visual Studio Code.
 * @Author      : Junyong Zhao (junyong@seas.upenn.edu)
 * @LastEditTime: 2021-12-28 16:52:14
 */
{
    // 隐私，更新，测试功能设置
    "telemetry.telemetryLevel": "off",
    "workbench.enableExperiments": false,
    "update.mode": "none",
    "update.showReleaseNotes": false,
    // 文件，面板，图标设置
    "files.autoGuessEncoding": true,
    "git.ignoreMissingGitWarning": true,
    "workbench.startupEditor": "none",
    "workbench.editor.untitled.hint": "hidden",
    "workbench.colorTheme": "Shikibu",
    "workbench.iconTheme": "material-icon-theme", // * install
    //编辑器，终端设置
    "editor.fontSize": 14,
    "editor.fontFamily": "Hack", // * install
    "editor.lineHeight": 23,
    "editor.wordWrap": "on",
    "editor.cursorBlinking": "solid",
    "editor.guides.bracketPairs": "active",
    "editor.rulers": [
        80
    ],
    "debug.console.fontSize": 14,
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.inheritEnv": false,
    // 扩展设置
    "extensions.autoUpdate": false,
    "extensions.autoCheckUpdates": false,
    "extensions.ignoreRecommendations": true,
    // vim
    "vim.useSystemClipboard": true,
    "vim.handleKeys": {
        "<C-w>": false,
        "<C-b>": false,
        "<C-k>": false,
        "<C-x>": false
    },
    // 文件标头
    "fileheader.configObj": {
        "autoAdd": false,
        "wideSame": true,
        "wideNum": 12,
        "cursorModeInternalAll": {
            "python": true,
            "defaultSetting": false
        },
        "functionBlankSpaceAll": {
            "python": 4,
            "defaultSetting": 0
        }
    },
    "fileheader.customMade": {
        "Description": "",
        "Author": "Junyong Zhao (junyong@seas.upenn.edu)",
        "Date": "Do not edit",
        "LastEditors": "Junyong Zhao (junyong@seas.upenn.edu)",
        "LastEditTime": "Do not edit"
    },
    // 自动折行
    "rewrap.autoWrap.enabled": true,
    // GitLens
    "gitlens.menus": {
        "editor": false,
        "editorGroup": {
            "blame": false,
            "compare": true
        },
        "editorTab": false,
        "explorer": false,
        "scm": false,
        "scmGroupInline": false,
        "scmGroup": false,
        "scmItem": false
    },
    "gitlens.codeLens.enabled": false,
    "gitlens.statusBar.enabled": false,
    "gitlens.defaultDateFormat": "YYYY-MM-DD hh:mm",
    "gitlens.defaultDateShortFormat": "YYYY-MM-DD",
    "gitlens.defaultTimeFormat": "hh:mm",
    // C / C++
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: WebKit, ColumnLimit: 80 }",
    // python
    "python.terminal.activateEnvironment": false,
    "python.pythonPath": "/usr/bin/python3", // * OS
    "python.linting.pylintPath": "/usr/bin/pylint", // * OS
    "python.formatting.autopep8Path": "/usr/bin/autopep8", // * OS
    "[python]": {
        "editor.guides.bracketPairs": false
    },
    // Web
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features",
        "editor.tabSize": 2
    },
    "html.completion.attributeDefaultValue": "doublequotes",
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features",
        "editor.tabSize": 2,
        // eslint airbnb max length
        "editor.rulers": [
            100
        ]
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features",
        "editor.rulers": []
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features",
        "editor.rulers": []
    },
    // LaTeX Workshop
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.latex.autoClean.run": "onBuilt",
    "latex-workshop.latexindent.path": "/home/linuxbrew/.linuxbrew/bin/latexindent", // * OS
    "latex-workshop.latex.recipe.default": "lastUsed",
    "latex-workshop.latex.tools": [
        {
            "name": "XeLaTeX",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOCFILE%"
            ]
        },
        {
            "name": "pdfLaTeX",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-shell-escape",
                "%DOCFILE%"
            ]
        },
        {
            "name": "BibTeX",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ]
        },
        {
            "name": "Biber",
            "command": "biber",
            "args": [
                "%DOCFILE%"
            ]
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "pdfLaTeX",
            "tools": [
                "pdfLaTeX"
            ]
        },
        {
            "name": "pdfLaTeX->BibTeX->pdfLaTeX->pdfLaTeX",
            "tools": [
                "pdfLaTeX",
                "BibTeX",
                "pdfLaTeX",
                "pdfLaTeX"
            ]
        },
        {
            "name": "pdfLaTeX->Biber->pdfLaTeX->pdfLaTeX",
            "tools": [
                "pdfLaTeX",
                "Biber",
                "pdfLaTeX",
                "pdfLaTeX"
            ]
        }
    ],
    "latex-workshop.latex.clean.fileTypes": [
        "*.aux",
        "*.bbl",
        "*.blg",
        "*.idx",
        "*.ind",
        "*.lof",
        "*.lot",
        "*.out",
        "*.toc",
        "*.acn",
        "*.acr",
        "*.alg",
        "*.glg",
        "*.glo",
        "*.gls",
        "*.ist",
        "*.fls",
        "*.log",
        "*.synctex.gz",
        "*.fdb_latexmk",
        "*.bcf",
        "*.xml"
    ],
    // ltex
    "ltex.enabled": [
        "plaintext",
        "markdown",
        "latex",
        "bibtex"
    ],
    "ltex.diagnosticSeverity": "hint",
    "ltex.ltex-ls.logLevel": "severe",
    // matlab
    "matlab.matlabpath": "/Applications/MATLAB_R2020b.app/bin/maci64/MATLAB", // * OS
    "matlab.mlintpath": "/Applications/MATLAB_R2020b.app/bin/maci64/mlint", // * OS
    "files.associations": {
        "*.m": "matlab"
    },
    // Red Hat YAML
    "redhat.telemetry.enabled": false
}